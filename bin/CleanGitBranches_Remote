#!/bin/sh

git branch -r --merged ${1-origin/master} origin/* |
    grep -Ev 'dev|master|release/next|release/current' |
    sed 's/origin\///g' |
    tee >(xargs -I {} -n 1 echo {} `git log -1 --pretty="format:%H %aN %aD"` > ${2-deleted_refs.txt}) |
    xargs -I {} -n 1 echo git push -f origin :{}
