sourceIt() {
    completions=~/.bash_completions
    [ -d $completions ] || mkdir $completions

    dir=${3:-$PWD}
    if [ ! -e $completions/$1 ]; then
        cd $dir
        $2 > $completions/$1 2> /dev/null
    fi
    source $completions/$1
    printf "."
}

mono=~/Projects/mono
printf "Installing completions..."
sourceIt "kubectl" "kubectl completion bash"
sourceIt "helm" "helm completion bash"
sourceIt "pants" "./pants bash-completion" "$mono"
printf "Done!\n"

eval $($mono/sc -f 2> /dev/null) > /dev/null 2>&1
